# Matrix Homeserver URL
# This is the Matrix server where your bot connects
# Examples: https://matrix.org, https://matrix.example.com
# NOTE: If you want to use your own domain (e.g., nwo1.xyz), you need to set up a Matrix server first
# For now, use matrix.org and set DEALER_DOMAIN to your domain for display purposes
HOMESERVER_URL=https://matrix.org

# ============================================
# AUTHENTICATION - Choose ONE method:
# ============================================
#
# METHOD 1 (RECOMMENDED): Password-based login
# Bot automatically gets a fresh token on each startup - NEVER expires!
# Just use your bot's Matrix username and password:
BOT_USERNAME=@wormunpol:matrix.org
BOT_PASSWORD=your_bot_password_here
#
# METHOD 2: Access Token (manual - can expire)
# Get this from Element -> Settings -> Help & About -> Access Token
# Token starts with mat_, syt_, or MDAx...
# ACCESS_TOKEN=mat_y2akHoHcxqjsoy8BvUxuptKYxudAR3_pOqxE3
#
# NOTE: If both are set, password login takes priority

# Admin users (comma-separated list of user IDs or partial matches)
# Example: @admin1:matrix.org,@admin2:matrix.org or just admin1,admin2
# IMPORTANT: Add your own Matrix ID here to prevent bot from deleting your messages!
ADMIN_USERS=@wormunpol:matrix.org,@corchet:matrix.org,@fixzzeesup:matrix.org

# Default role for new users
DEFAULT_ROLE=Neverificat

# Verification contacts (comma-separated)
# You can use ANY format - Matrix IDs, emails, or plain text
# Examples:
#   Matrix IDs: @admin1:example.com,@admin2:example.com
#   Emails: admin@example.com,support@example.com
#   Plain text: adminverde,Support Team
#   Mixed: @admin1:matrix.org,admin@example.com,Support
VERIFICATION_CONTACTS=@admin1:example.com,@admin2:example.com

# Dealer/Admin domain (shown in welcome messages)
# You can use ANY domain or text - it's just displayed as-is in welcome messages
# Examples: nwo1.xyz, example.com, mycompany.xyz, admin, anything-you-want
# It doesn't need to be real or registered - just text!
# This is DIFFERENT from HOMESERVER_URL - see HOMESERVER_GUIDE.md for details
DEALER_DOMAIN=nwo1.xyz

# Bot display name (how the bot appears in rooms)
# Examples: bot, Bot, bot@wormunpol:matrix.org, My Bot
BOT_DISPLAY_NAME=bot

# Ignored rooms (comma-separated room IDs or partial matches)
# Bot will completely ignore these rooms - won't join, send messages, or process events
# Examples: !xsLlpIgJqHURSLlVyO:matrix.org or just xsLlpIgJqHURSLlVyO
IGNORED_ROOMS=!xsLlpIgJqHURSLlVyO:matrix.org

